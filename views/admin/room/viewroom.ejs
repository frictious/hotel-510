<%- include('../partials/header') %>
        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-6 p-md-0">
                        <div class="welcome-text">
                            <h4>Room</h4>
                            <span class="ml-1">View Room</span>
                        </div>
                    </div>
                    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                        <a href="/admin/room/<%- room._id %>/edit" class="btn btn-primary">Edit</a>
                    </div>
                </div>
                <!-- row -->

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row justify-content-between">
                                    <div class="col-lg-12">
                                        <div class="mb-4">
                                            <img src="/admin/files/<%- room.picture %>" alt="Room Image" width="100%" height="">
                                        </div>
                                        
                                    </div>
                                    <div class="col-12">
                                        <br>
                                        <br>
                                        <hr>
                                        <br>
                                        <br>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="mb-4">
                                            <h4 class="card-title card-intro-title"><%- room.name %></h4>
                                            <p>$ <%- room.price %></p>
                                        </div>
                                    
                                    </div>
                                    <div class="col-lg-12">
                                        <p>
                                            <%- room.description %>
                                        </p>
                                    </div>
                                    
                                    <div class="col-12">
                                        <br>
                                        <br>
                                        <hr>
                                        <br>
                                        <br>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
<%- include('../partials/footer') %>